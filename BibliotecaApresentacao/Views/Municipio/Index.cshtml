@model IList<BibliotecaApresentacao.ViewModels.MunicipioViewModel>
@{
    ViewBag.Title = "Index";
}

<div class="col">
    <div class="row">
        <div class="col-10">
            <h1>Municípios</h1>
        </div>
        <div class="col">
            <a class="btn btn-primary btn-sm btn-form float-right" href="~/Municipio/Create">Novo</a>
        </div>
    </div>
</div>
<table class="table table-hover">
    <thead>

    </thead>
    <tbody>
        @foreach (var municipio in Model)
        {
            <tr class="busca">
                <td class="info-nome">@municipio.NomeMunicipio</td>
                <td class="col-md-1">
                    <a class="btn btn-warning btn-sm float-right" href="~/Municipio/Edit/@municipio.MunicipioId">Editar</a>
                </td>
                <td class="col-md-1">
                    <a class="btn btn-danger btn-sm float-right" href="~/Municipio/Delete/@municipio.MunicipioId">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>

