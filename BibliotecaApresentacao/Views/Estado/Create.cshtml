@model BibliotecaApresentacao.ViewModels.EstadoViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Estado", FormMethod.Post))
{
    <h3>Cadastro de Estado</h3>

    <div class="col">
        <div class="row">
            <div class="col">
                @Html.LabelFor(model => model.NomeEstado, "*Estado: ", new {@class = "col-form-label" })
                @Html.EditorFor(model => model.NomeEstado, new { htmlAttributes = new {@class = "form-control", @placeholder = "Digite o estado...", @required="", @autofocus = ""}})
                @Html.ValidationMessageFor(model => model.NomeEstado, "", new { @class = "text-danger"})
            </div>
            <div class="col">
                <label class="col-form-label" for="pais">*País</label>
                <select id="pais" name="PaisId" class="form-control" required="">
                    <option value="" disabled selected>Selecione um país...</option>
                    @foreach (var pais in ViewBag.Pais)
                    {
                        <option value="@pais.PaisId">@pais.NomePais</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="col">
        <a class="btn btn-warning btn-form" href="~/Estado/Index">Voltar</a>
        <input class="btn btn-primary btn-form" type="submit" value="Cadastrar" />
    </div>
}

