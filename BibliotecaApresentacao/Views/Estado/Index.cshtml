@model IList<BibliotecaApresentacao.ViewModels.EstadoViewModel>
@{
    ViewBag.Title = "Index";
}

<div class="col">
    <div class="row">
        <div class="col-10">
            <h1>Estados</h1>
        </div>
        <div class="col">
            <a class="btn btn-primary btn-form float-right" href="~/Estado/Create">Novo</a>
        </div>
    </div>
</div>
<table class="table table-hover">
    <thead>

    </thead>
    <tbody>
        @foreach (var estado in Model)
        {
            <tr>
                <td>@estado.NomeEstado</td>
                <td class="col-md-1">
                    <a class="btn btn-warning float-right" href="~/Estado/Edit/@estado.EstadoId">Editar</a>
                </td>
                <td class="col-md-1">
                    <a class="btn btn-danger float-right" href="~/Estado/Delete/@estado.EstadoId">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
