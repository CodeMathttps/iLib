@model IList<BibliotecaApresentacao.ViewModels.PaisViewModel>
@{
    ViewBag.Title = "Index";
}

<div class="col">
    <div class="row">
        <div class="col-10">
            <h1>País</h1>
        </div>
        <div class="col">
            <a class="btn btn-primary btn-form float-right" href="~/Pais/Create">Novo</a>
        </div>
    </div>
</div>
<table class="table table-hover">
    <thead>

    </thead>
    <tbody>
        @foreach (var pais in Model)
        {
            <tr>
                <td>@pais.NomePais</td>
                <td class="col-md-1">
                    <a class="btn btn-warning float-right" href="~/Pais/Edit/@pais.PaisId">Editar</a>
                </td>
                <td class="col-md-1">
                    <a class="btn btn-danger float-right" href="~/Pais/Delete/@pais.PaisId">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>