@model IList<BibliotecaApresentacao.ViewModels.PaisViewModel>
@{
    ViewBag.Title = "Index";
}

@if (TempData["msg"] != null)
{
    <span id="mensagem" class="alert-danger alert-heading">
        <div class="alert alert-danger" role="alert">
            @TempData["msg"]
        </div>
    </span>
}

<div class="col">
    <div class="row">
        <div class="col-10">
            <h1>País</h1>
        </div>
        <div class="col">
            <a class="btn btn-primary btn-sm btn-form float-right" href="~/Pais/Create">Novo</a>
        </div>
    </div>
</div>
<table class="table table-hover">
    <thead>

    </thead>
    <tbody>
        @foreach (var pais in Model)
        {
            <tr class="busca">
                <td class="info-nome">@pais.NomePais</td>
                <td class="col-md-1">
                    <a class="btn btn-warning btn-sm float-right" href="~/Pais/Edit/@pais.PaisId">Editar</a>
                </td>
                <td class="col-md-1">
                    <a class="btn btn-danger btn-sm float-right" href="~/Pais/Delete/@pais.PaisId">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>