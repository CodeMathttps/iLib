@model BibliotecaApresentacao.ViewModels.ExemplarLivroViewModel
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm($"Edit/{ViewBag.ExemplarLivroId}", "ExemplarLivro", FormMethod.Post))
{
    <h3>Edição de Exemplar</h3>
    <h6>@ViewBag.LivroTitulo</h6>

    <div class="col">
        <div class="row">
            <div class="col">
                @Html.LabelFor(model => model.Registro, "*Registro ", new { @class = "col-form-label" })
                @Html.EditorFor(model => model.Registro, new { htmlAttributes = new { @class = "form-control", @placeholder = "Máx. 100 caracteres", @value = ViewBag.ExemplarLivro.Registro } })
                @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
            </div>
            <div class="col">
                @Html.LabelFor(model => model.NumeroExemplar, "*Nº exemplar: ", new { @class = "col-form-label" })
                @Html.EditorFor(model => model.NumeroExemplar, new { htmlAttributes = new { @class = "form-control", @placeholder = "Apenas números...", @value = ViewBag.ExemplarLivro.NumeroExemplar } })
                @Html.ValidationMessageFor(model => model.NumeroExemplar, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="col">
        <a class="btn btn-danger btn-form" href="~/ExemplarLivro/Index/@ViewBag.ExemplarLivro.LivroId">Cancelar</a>
        <input class="btn btn-success btn-form" type="submit" value="Salvar" />
    </div>
}

